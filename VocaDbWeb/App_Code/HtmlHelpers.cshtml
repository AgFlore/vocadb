@using System.Web.Mvc.Html;
@using VocaDb.Web.Code;
@using VocaDb.Web.Models.Shared.Partials.Html;
@inherits VocaDb.Web.Code.HelperPage

@helper OpenGraphMetaTags(PagePropertiesData pageProperties) {
	Html.RenderPartial("Partials/Html/_MetaTag", new MetaTagViewModel("og:url", pageProperties.CanonicalUrl));
	Html.RenderPartial("Partials/Html/_MetaTag", new MetaTagViewModel("og:title", pageProperties.OpenGraph.Title));
	Html.RenderPartial("Partials/Html/_MetaTag", new MetaTagViewModel("og:description", pageProperties.OpenGraph.Description));
	Html.RenderPartial("Partials/Html/_MetaTag", new MetaTagViewModel("og:type", pageProperties.OpenGraph.Type));
}