@inherits VocaDb.Web.Code.VocaDbPage

@{
    PageProperties.Title = "Deleted albums";
	ViewBag.Parents = new[] { Html.ActionLink(ViewRes.SharedStrings.Albums, "Index") };
}

<input type="text" data-bind="textInput: searchTerm" maxlength="200" />

@{ Html.RenderPartial("Partials/_AlbumSearchList"); }

@section BodyScripts {
	
	<script src="@Url.Content("~/Scripts/Repositories/AlbumRepository.js")"></script>
	<script src="@Url.Content("~/Scripts/ViewModels/Search/SearchCategoryBaseViewModel.js")"></script>
	<script src="@Url.Content("~/Scripts/ViewModels/Search/AlbumSearchViewModel.js")"></script>
	<script src="@Url.Content("~/Scripts/ViewModels/Album/DeletedAlbumsViewModel.js")"></script>
	<script language="javascript">
		
		$(function () {

			var repo = new vdb.repositories.AlbumRepository('@RootPath', @LanguagePreferenceInt);
			var viewModel = new vdb.viewModels.DeletedAlbumsViewModel(repo);
			ko.applyBindings(viewModel);

		});

	</script>

}