@using VocaDb.Web.Models.Shared.Partials.Album
@model VocaDb.Model.DataContracts.Albums.RelatedAlbumsContract
@using R = ViewRes.Album.DetailsStrings

@if (!Model.Any) {
	@ViewRes.EntryDetailsStrings.NoMatches
}

@if (Model.ArtistMatches.Any()) {
	<h3>@R.MatchingArtists</h3>
	<partial name="Partials/Album/_AlbumGrid" model="@(new AlbumGridViewModel(Model.ArtistMatches, 2, true, false, true))" />
	<br />
}
	
@if (Model.LikeMatches.Any()) {
	<h3>@R.MatchingLikes</h3>
	<partial name="Partials/Album/_AlbumGrid" model="@(new AlbumGridViewModel(Model.LikeMatches, 2, true, false, true))" />
}

@if (Model.TagMatches.Any()) {
	<h3>@R.MatchingTags</h3>
	<partial name="Partials/Album/_AlbumGrid" model="@(new AlbumGridViewModel(Model.TagMatches, 2, true, false, true))" />
}
