@inherits VocaDb.Web.Code.VocaDbPage

@if (PageProperties.OpenGraph.ShowTwitterCard && !string.IsNullOrEmpty(PageProperties.OpenGraph.Description)) {
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:site" content="@("@")@Config.SiteSettings.TwitterAccountName" />
	<meta name="twitter:title" content="@PageProperties.OpenGraph.Title" />
	<meta name="twitter:description" content="@PageProperties.OpenGraph.Description" />
	<meta name="twitter:image" content="@PageProperties.OpenGraph.Image" />
}