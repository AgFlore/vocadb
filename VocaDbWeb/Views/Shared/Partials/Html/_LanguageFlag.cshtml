@using VocaDb.Web.Helpers;
@using VocaDb.Web.Models.Shared.Partials.Html;
@model LanguageFlagViewModel

@if (!string.IsNullOrEmpty(Model.LanguageCode))
{
	<img src="@Url.StaticResource("/img/languageFlags/" + Model.LanguageCode + ".png")" alt="@Model.LanguageCode" title="@Model.LanguageCode" />
}
else
{
	<img src="@Url.StaticResource("/img/languageFlags/unknown.png")" alt="@VocaDb.Web.Resources.Domain.Globalization.InterfaceLanguageStrings.Other" title="@VocaDb.Web.Resources.Domain.Globalization.InterfaceLanguageStrings.Other" />
}