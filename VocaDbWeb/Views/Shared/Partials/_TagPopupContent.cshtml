@using VocaDb.Model.Helpers
@model VocaDb.Model.DataContracts.Tags.TagForApiContract

<style type="text/css">
	.popupTitle { color: black; }
</style>

@if (Model.MainPicture != null) {
<div class="thumbnail">
	<img src='@Model.MainPicture.UrlThumb' alt="Thumb" class="coverPicThumb" />
</div>
}

<strong class="popupTitle">@Model.Name</strong>

@if (!string.IsNullOrEmpty(Model.AdditionalNames)) {
<p>
    @Model.AdditionalNames
</p>
}
<p>
	@Model.CategoryName<br />
</p>    

@if (!string.IsNullOrEmpty(Model.Description)) {
	<p>
		@Model.Description.TruncateWithEllipsis(30)		
	</p>
}