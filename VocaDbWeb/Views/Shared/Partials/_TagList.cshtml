
<!-- binding context: TagListViewModel -->

<ul data-bind="foreach: displayedTagUsages" class="link-list">
	<li class="link-item">
		<span><a data-bind="text: tag.name, attr: { href: $parent.getTagUrl($data), title: tag.additionalNames }"></a><small class="muted" data-bind="text: ' (' + count + ')'"></small></span>
	</li>
</ul>
<span data-bind="visible: !expanded()">
	-
	<a data-bind="click: function() { expanded(true); }" href="#">
		@ViewRes.EntryDetailsStrings.ShowAllTags
		(<span data-bind="text: tagUsages().length"></span>)
	</a>
</span>