@using VocaDb.Model.Domain.Images;
@using VocaDb.Web.Helpers;
@using VocaDb.Web.Models.Shared.Partials.Album;
@model AlbumThumbsViewModel

<ul class="smallThumbs">
	@foreach (var album in Model.Albums)
	{
		@Helpers.ThumbItem(Url.Action("Details", "Album", new { id = album.Id }),
			Url.ImageThumb(album.MainPicture, ImageSize.SmallThumb), album.Name, album)
	}
</ul>
