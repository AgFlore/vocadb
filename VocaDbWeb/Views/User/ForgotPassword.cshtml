@using VocaDb.Web.Models.Shared.Partials.Shared;
@using Res = ViewRes.User.ForgotPasswordStrings;
@inherits VocaDb.Web.Code.VocaDbPage<VocaDb.Web.Models.User.ForgotPassword>

@{
	PageProperties.Title = Res.RequestPasswordReset;
}

@section Head {
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>	
}

@{ Html.RenderPartial("Partials/Shared/_ValidationSummaryPanel", new ValidationSummaryPanelViewModel(Res.UnableToProcessRequest)); }

@using (Html.BeginForm()) {
	
	<div class="editor-label">
		<label>@ViewRes.SharedStrings.Username</label>
	</div>
	<div class="editor-field">
		@Html.TextBoxFor(m => m.Username)<br />
		@Html.ValidationMessageFor(m => m.Username)
	</div>
	
	<div class="editor-label">
		<label>@ViewRes.SharedStrings.EmailAddress</label>
	</div>
	<div class="editor-field">
		@Html.TextBoxFor(m => m.Email)<br />
		@Html.ValidationMessageFor(m => m.Email)
	</div>

	<div class="editor-label">
		CAPTCHA
	</div>
	<div class="editor-field">
		@{ Html.RenderPartial("Partials/Shared/_ReCaptcha2"); }

		@Html.ValidationMessage("CAPTCHA")
	</div>
		
	<br />
	<p>
		<button type="submit" class="btn btn-primary">@Res.SendRequest</button>
	</p>

}